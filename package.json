{
  "name": "platformsh-client",
  "version": "0.2.16",
  "description": "Isomorphic Javascript library for accessing the Platform.sh API",
  "browser": "lib/client/platform-api.js",
  "main": "lib/server/platform-api.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "rm -rf ./types && rm -rf ./lib && webpack --env mode=build",
    "dev": "webpack --progress --watch --env mode=dev",
    "test": "npm run test-web && npm run test-node",
    "test-web": "vitest --environment=jsdom run",
    "test-node": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "precommit": "lint-staged && npm run build",
    "prepush": "npm test",
    "typecheck": "npx tsc --noEmit"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.9.0",
    "@types/atob": "^2.1.2",
    "@types/detect-node": "^2.0.0",
    "@types/event-source-polyfill": "^1.0.2",
    "@types/fetch-mock": "^7.3.8",
    "@types/is-url": "^1.2.30",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/node": "^22.5.1",
    "@types/object.pick": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-loader": "9.1.3",
    "buffer": "^6.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fetch-mock": "^11.1.3",
    "https-browserify": "^1.0.0",
    "husky": "^0.14.3",
    "jsdom": "^25.0.0",
    "lint-staged": "^13.2.1",
    "mock-local-storage": "^1.1.8",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.6",
    "process": "^0.11.10",
    "stream-http": "^3.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "url": "^0.11.1",
    "vitest": "^2.0.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "atob": "^2.1.2",
    "basename": "^0.1.2",
    "cross-fetch": "^4.0.0",
    "detect-node": "^2.0.4",
    "email-validator": "^1.0.7",
    "es6-promise": "4.2.6",
    "event-source-polyfill": "^1.0.31",
    "is-scalar": "^1.0.2",
    "is-url": "^1.2.2",
    "oauth2-popup-flow": "^1.1.0",
    "object.pick": "^1.3.0",
    "parse_url": "^0.1.1",
    "slugify": "^1.3.4",
    "to-querystring": "^1.1.3",
    "ts-loader": "~9.4.4",
    "url-pattern": "^1.0.3"
  },
  "overrides": {
    "tough-cookie": "5.0.0-rc.4",
    "whatwg-url": "14.x"
  }
}
